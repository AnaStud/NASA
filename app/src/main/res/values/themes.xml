<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="MyThemeNASA" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">?myColor_500</item>
        <item name="colorPrimaryVariant">?myColor_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">?myColor_400</item>
        <item name="colorSecondaryVariant">?myColor_600</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?myColor_700</item>
        <!-- Customize your theme here. -->
        <item name="bottomAppBarStyle">@style/myBottomAppBarStyle</item>
    </style>

    <style name="myBottomAppBarStyle" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="backgroundTint">?myColor_700</item>
    </style>

    <style name="MyBlueTheme" parent="MyThemeNASA">
        <item name="myColor_400">@color/blue_400</item>
        <item name="myColor_500">@color/blue_500</item>
        <item name="myColor_600">@color/blue_600</item>
        <item name="myColor_700">@color/blue_700</item>
    </style>

    <style name="MyRedTheme" parent="MyThemeNASA">
        <item name="myColor_400">@color/red_400</item>
        <item name="myColor_500">@color/red_500</item>
        <item name="myColor_600">@color/red_600</item>
        <item name="myColor_700">@color/red_700</item>
    </style>

    <style name="MyGreenTheme" parent="MyThemeNASA">
        <item name="myColor_400">@color/green_400</item>
        <item name="myColor_500">@color/green_500</item>
        <item name="myColor_600">@color/green_600</item>
        <item name="myColor_700">@color/green_700</item>
    </style>

</resources>